<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joytan.rec">
    <!-- <uses-permission android:name="android.permission.INTERNET"/> -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".start.StartActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">

            <!-- android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"> -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="quickecho.joytan.com"
                    android:path="/android"
                    android:scheme="https" />
            </intent-filter>
        </activity> <!-- Permission -->
        <activity
            android:name=".start.PermissionActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" /> <!-- Main -->
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" /> <!-- Setting -->
        <activity
            android:name=".setting.SettingActivity"
            android:label="@string/title_setting"
            android:screenOrientation="portrait" /> <!-- Authentication -->
        <activity
            android:name=".setting.SignupActivity"
            android:label="@string/sign_up"
            android:screenOrientation="portrait" />
        <activity
            android:name=".setting.LoginActivity"
            android:label="@string/log_in"
            android:screenOrientation="portrait" />
        <activity
            android:name=".setting.AccountActivity"
            android:label="@string/your_account"
            android:screenOrientation="portrait" /> <!-- HTML Viewer画面(OSSライセンス) -->
        <activity
            android:name=".setting.HtmlViewerActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/pref_oss" /> <!-- アプリについて画面 -->
        <activity
            android:name=".setting.AboutActivity"
            android:label="@string/pref_information" /> <!-- メインサービス -->
        <service
            android:name=".main.MainService"
            android:exported="false" />
    </application>

</manifest>