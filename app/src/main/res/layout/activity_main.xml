<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.joytan.rec.main.MainViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cool_gradient"

        tools:context=".main.MainActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Contents -->

            <!-- Explosion effect -->
            <com.joytan.rec.main.view.ExplosionView
                android:id="@+id/explosion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="-400dp" />

            <!-- Spinner for projects -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/projects_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/dropdownListPreferredItemHeight"
                    android:background="@drawable/spinner_bg"
                    android:dropDownWidth="match_parent"
                    android:theme="@style/MatchSpinnerTheme"
                    android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                    android:popupElevation="5dp"
                    android:stateListAnimator="@drawable/spinner_sla"
                    />

                <TextView
                    android:id="@+id/index_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/text_dark" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:id="@+id/grid_jump"
                    android:src="@drawable/ic_grid_24dp"
                    android:paddingTop="-2dp"
                    android:background="@null"
                    android:onClick="@{viewModel::onGridClicked}"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <include
                layout="@layout/background_arrows"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                layout="@layout/main_script"
                android:layout_height="200dp"
                app:viewModel="@{viewModel}" />

            <include
                layout="@layout/main_script_dummy"
                android:layout_height="200dp"
                app:viewModel="@{viewModel}" />
            <!--<androidx.recyclerview.widget.RecyclerView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:id="@+id/script_cycle"-->
                <!--android:scrollbars="horizontal">-->

            <!--</androidx.recyclerview.widget.RecyclerView>-->

            <!-- Display recording status -->
            <include
                layout="@layout/main_status"
                android:layout_width="match_parent"
                android:layout_height="620dp"
                app:viewModel="@{viewModel}" />

            <!-- Main controller-->
            <include
                layout="@layout/main_control"
                android:layout_height="120dp"
                app:viewModel="@{viewModel}" />

            <!-- Display Alert -->

            <FrameLayout
                android:id="@+id/warning_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="104dp">

                <com.joytan.rec.main.view.MyCardView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:myCardColor="@color/warning" />

                <TextView
                    android:id="@+id/warning_mute_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:text="@string/warning_time_limit" />


            </FrameLayout>

            <TextView
                android:text="@string/roll_notice"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit ="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:layout_gravity="end|bottom"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"/>

            <!--
            Disabling Ads
                    <com.google.android.gms.ads.AdView android:id="@+id/ad"
                                                       android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       android:layout_gravity="center_horizontal|top"
                                                       app:adUnitId="@string/banner_ad_unit_id"
                                                       android:layout_marginBottom="@dimen/activity_margin"
                                                       app:adSize="BANNER"/>
                                                       -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:id="@+id/overlay">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textColor="#FFDD00"
                            android:gravity="right"
                            android:textSize="18dp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/project_tip"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:rotation="-80"
                        android:src="@drawable/ic_curved_arrow"/>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="70dp"
                    android:layout_marginRight="30dp"
                    android:gravity="right">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textColor="#FFDD00"
                            android:gravity="right"
                            android:textSize="18dp"
                            android:text="@string/login_tip"/>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:rotation="-80"
                        android:layout_marginLeft="-25dp"
                        android:scaleX="-1"
                        android:src="@drawable/ic_curved_arrow"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</layout>
