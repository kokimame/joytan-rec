<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/comment_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_comment"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Your comment will be posted on joytan.pub.
            \nThis feature is under development.
            \nEditing and replying a post is only available on the website"
                android:textColor="@color/bg_darkest"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textAlignment="textEnd"
                android:id="@+id/forum_link"
                android:text="See Forum on WebðŸ’¬"
                android:clickable="true"
                android:textColor="@color/colorAccent"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/comment_edittext"
                android:background="@drawable/bg_comment_edit"
                android:padding="3dp"
                android:gravity="top"
                android:textSize="14dp"
                android:hint="Your comment on this entry (e.g. errors and tips for learners)"
                android:layout_margin="8dp">
            </EditText>
        </LinearLayout>

        <!-- Button box Cancel / Post-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_comment_footer"
            android:gravity="right"
            android:paddingRight="5dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/cancel_post"
                android:background="@null"
                android:text="CANCEL"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:id="@+id/do_post"
                android:text="POST"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>