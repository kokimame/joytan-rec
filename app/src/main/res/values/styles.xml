<resources>

    <style name="GridDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="MatchSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/bg_darker</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@color/bg_dark</item>
    </style>

    <style name="MatchSpinnerTheme" parent="AppTheme">
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownListViewStyle">@style/MatchSpinnerStyle</item>
    </style>

    <!-- Base application theme. -->
    <!-- Legacy code: Used in Permission Activity as well -->
    <!-- should be merged with AppTheme.Overlay-->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Background color for Toolbar -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Navigation bar color -->
        <item name="colorPrimaryDark">@color/bg_darkest</item>
        <item name="colorAccent">@color/primary</item>
        <!-- Style for Toolbar -->
        <item name="toolbarStyle">@style/Toolbar</item>
        <!-- Color for Back button in Toolbar-->
        <item name="colorControlNormal">@color/toolbar_title</item>
        <!-- Style for button-->
        <item name="android:alertDialogStyle">@style/AlertDialog</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Background color for Toolbar -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Navigation bar color -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- Style for Toolbar -->
        <item name="toolbarStyle">@style/Toolbar</item>
        <!-- Color for Back button in Toolbar-->
        <item name="colorControlNormal">@color/toolbar_title</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/Toolbar.Title</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/toolbar_title</item>
    </style>

    <!-- Button -->
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
    </style>


    <!-- For screenshot -->
    <style name="ScreenShotCardView">
        <item name="cardBackgroundColor">@color/ss_card</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="ScreenShotDescription" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="UserDescription" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/bg_darkest</item>
    </style>


</resources>
